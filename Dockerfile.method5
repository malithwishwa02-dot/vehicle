# CHRONOS IDENTITY ENGINE - METHOD 5 (ZERO DECLINED)
# BASE: Python 3.11-slim (Debian Bookworm)

FROM python:3.11-slim-bookworm

# -----------------------------------------------------------------------------
# PHASE 1: SYSTEM HARDENING & NETWORK STACK PREP
# -----------------------------------------------------------------------------
# Install essential tools + IPTABLES for Kernel TTL Spoofing
RUN apt-get update && apt-get install -y \
    wget \
    curl \
    gnupg \
    unzip \
    xvfb \
    iptables \
    iproute2 \
    net-tools \
    procps \
    && rm -rf /var/lib/apt/lists/*

# -----------------------------------------------------------------------------
# PHASE 2: BROWSER INFRASTRUCTURE (CHROME)
# -----------------------------------------------------------------------------
# Install Chrome for Nodriver (Method 5 requirement)
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - \
    && echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list \
    && apt-get update && apt-get install -y google-chrome-stable

# -----------------------------------------------------------------------------
# PHASE 3: PYTHON DEPENDENCIES
# -----------------------------------------------------------------------------
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# -----------------------------------------------------------------------------
# PHASE 4: APPLICATION CODE
# -----------------------------------------------------------------------------
COPY . .

# -----------------------------------------------------------------------------
# PHASE 5: KERNEL ENTRYPOINT
# -----------------------------------------------------------------------------
# Must run with --cap-add=NET_ADMIN for TTL spoofing
COPY chronos-vehicle/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
